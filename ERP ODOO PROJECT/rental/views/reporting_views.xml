<odoo>

    <record id="view_rental_reporting_history_list" model="ir.ui.view">
        <field name="name">rental.contract.reporting.history.list</field>
        <field name="model">rental.contract</field>
        <field name="arch" type="xml">
            <list string="Historique des locations">
                <field name="client_id"/>
                <field name="bike_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="billing_unit"/>
                <field name="amount_total"/>
                <field name="invoice_id"/>
            </list>
        </field>
    </record>


    <record id="view_rental_reporting_data_graph" model="ir.ui.view">
        <field name="name">rental.contract.reporting.data.graph</field>
        <field name="model">rental.contract</field>
        <field name="arch" type="xml">
            <graph string="Statistiques de location" type="bar">
                <field name="date_start" type="row" interval="month"/>

                <field name="id" type="measure"/>

                <field name="bike_id" type="col"/>
            </graph>
        </field>
    </record>



    <record id="action_rental_reporting_history" model="ir.actions.act_window">
        <field name="name">Historique des locations</field>
        <field name="res_model">rental.contract</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_rental_reporting_history_list"/>
        <field name="domain">[('state', '=', 'done')]</field>
    </record>


    <record id="action_rental_reporting_data" model="ir.actions.act_window">
        <field name="name">Statistiques de location</field>
        <field name="res_model">rental.contract</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_rental_reporting_data_graph"/>
        <field name="domain">[('state', '=', 'done')]</field>
    </record>


</odoo>
