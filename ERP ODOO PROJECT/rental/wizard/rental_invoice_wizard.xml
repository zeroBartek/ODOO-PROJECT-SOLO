<odoo>
  <record id="view_rental_invoice_wizard_form" model="ir.ui.view">
    <field name="name">rental.invoice.wizard.form</field>
    <field name="model">rental.invoice.wizard</field>
    <field name="arch" type="xml">
      <form string="Générer facture">
        <group>
          <field name="contract_id"/>
        </group>

        <group string="Facturation">
          <field name="invoice_date"/>
          <field name="journal_id"/>
          <field name="invoice_payment_term_id"/>
          <field name="invoice_user_id"/>
          <field name="notes"/>
        </group>

        <group string="Frais">
          <field name="fee_label"/>
          <field name="fee"/>
        </group>

        <footer>
          <button name="action_create_invoice" type="object" string="Générer facture" class="btn-primary"/>
          <button string="Annuler" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="act_window_generate_invoice_rental" model="ir.actions.act_window">
    <field name="name">Générer facture</field>
    <field name="res_model">rental.invoice.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="binding_model_id" ref="model_rental_contract"/>
    <field name="binding_view_types">list,form</field>
  </record>
</odoo>
